{
  "compilerOptions": {
    "noEmitOnError": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/server/*": [
        "./src/*"
      ],
      "~/*": [
        "./app/*"
      ],
    },
    "lib": [
      "es2019",
      "esnext.asynciterable",
      "DOM",
      "DOM.Iterable",
    ],
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
  },
  "include": [
    "src",
    "remix.env.d.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "node_modules",
  ],
}